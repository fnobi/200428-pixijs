{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "rootDirs": [ "./src" ],
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/js/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}
